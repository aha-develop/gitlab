{
  "compilerOptions": {
    "checkJs": true,
    "noEmit": true,
    "lib": ["DOM", "ES6", "ES2019"],
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "downlevelIteration": true,
    "module": "ES6",
    "moduleResolution": "node",
    "target": "ES6",
    "baseUrl": "./src",
    "skipLibCheck": true,
    "paths": {
      "@components/*": ["./components/*"],
      "@components": ["./components/"],
      "@helpers/*": ["./helpers/*"],
      "@helpers": ["./helpers/"],
      "@lib/*": ["./lib/*"],
      "@lib": ["./lib/"]
    }
  },
  "include": [".aha-cache/types", "src"],
}
